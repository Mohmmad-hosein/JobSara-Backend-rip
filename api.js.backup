const express = require('express');
const router = express.Router();

// Route تست برای بررسی کارکرد API
router.get('/test', (req, res) => {
    res.json({ success: true, message: 'API is working!' });
});

// Route برای سلامت سرور
router.get('/health', (req, res) => {
    res.json({ status: 'OK', message: 'API health check passed' });
});

// Route نمونه برای profile
router.get('/profile/:id', (req, res) => {
    const userId = req.params.id;
    res.json({ 
        success: true, 
        message: 'Profile endpoint is working',
        userId: userId,
        user: {
            id: userId,
            username: 'testuser',
            email: 'test@example.com',
            firstName: 'Test',
            lastName: 'User',
            userType: 'job_seeker'
        }
    });
});

// Route نمونه برای register
router.post('/register', (req, res) => {
    // اینجا بعداً با دیتابیس integrate می‌شود
    res.json({ 
        success: true, 
        message: 'User registered successfully (demo)',
        userId: 1
    });
});

// Route نمونه برای login
router.post('/login', (req, res) => {
    // اینجا بعداً با دیتابیس integrate می‌شود
    res.json({ 
        success: true, 
        message: 'Login successful (demo)',
        token: 'demo-jwt-token-12345'
    });
});

module.exports = router;